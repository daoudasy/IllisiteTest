{% extends "@Platform/Default/layout.html.twig"%}
{%block title%}{{parent()}} Ajout{%endblock%}

{%block body%}
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h3 class="text-center text-muted">Modification</h3>
				{{form_start(form)}}
					<div class="form-group">
						<label for="nom">{{form_label(form.nom)}}:</label>
						<div class="input-group">
	    					{{form_widget(form.nom, {'attr':{'class':'form-control'}})}}
	    				</div>
	    			</div>
					<div class="form-group">
						<label for="prenom">{{form_label(form.prenom)}}:</label>
						<div class="input-group">
	    					{{form_widget(form.prenom, {'attr':{'class':'form-control'}})}}
	    				</div>
	    			</div><br/>
	    			<input type="submit" class="form-control" value="Modifier" /><br/>
	    			<div class="text-center"><a href="{{path('platform_homepage', {'page':page})}}" class="close">Retour</a></div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{%endblock%}